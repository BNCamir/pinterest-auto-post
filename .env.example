# Database (required)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Run behavior
RUN_MODE=cron
DRY_RUN=false
MAX_TOPICS_PER_RUN=1
BRAND_NAME=BoxNCase

# Google Trends (start of flow: best topics for pins)
# For food/candy/relevant articles use Food & Drink category (SearchApi). Otherwise BigQuery gives general trends.
GOOGLE_TRENDS_SOURCE=searchapi_food
SEARCHAPI_API_KEY=your_searchapi_key
# BigQuery (general trends: sports, weather, etc. – often not food-relevant):
# GOOGLE_TRENDS_SOURCE=bigquery
# GCP_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=
# GCP_SERVICE_ACCOUNT_JSON=
# Optional: use MCP instead of BigQuery
# GOOGLE_TRENDS_SOURCE=mcp
# GOOGLE_TRENDS_MCP_URL=https://your-google-trends-mcp-endpoint/trends
# GOOGLE_TRENDS_MCP_TOKEN=

# BoxNCase MCP
BOXNCASE_MCP_URL=https://your-boxncase-mcp-endpoint/context
BOXNCASE_MCP_TOKEN=

# OpenAI (blog + Pinterest copy)
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Gemini (pin image)
GEMINI_IMAGE_API_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_API_KEY=...
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image

# Templated.io (pin creative) – https://templated.io
TEMPLATED_API_KEY=...
# Single template (or use TEMPLATED_TEMPLATE_IDS to rotate multiple templates):
TEMPLATED_TEMPLATE_ID=your_template_id
# If your template has multiple pages (e.g. 10 layouts in one template), set page count to rotate:
# TEMPLATED_PAGE_COUNT=10

# Getlate (optional: upload images + post pins to Pinterest). If set, use with PINTEREST_BOARD_ID.
GETLATE_API_KEY=
GETLATE_PINTEREST_ACCOUNT_ID=

# Shopify (blog)
SHOPIFY_ADMIN_API_BASE_URL=https://your-store.myshopify.com/admin/api/2024-01
SHOPIFY_ACCESS_TOKEN=shpat_...
SHOPIFY_BLOG_ID=123456789
SHOPIFY_BLOG_HANDLE=news
# Public URL for your store (article links). Use custom domain or https://yourstore.myshopify.com
# SHOPIFY_PUBLIC_STORE_URL=https://www.yourstore.com

# Pinterest (pins – required for direct API; also set PINTEREST_BOARD_ID when using Getlate)
PINTEREST_API_BASE_URL=https://api.pinterest.com/v5
PINTEREST_ACCESS_TOKEN=...
# Getlate: use Pinterest board ID (long numeric, e.g. 916130817889228735), NOT Getlate account ID. List boards: GET /v1/accounts/{accountId}/pinterest-boards
PINTEREST_BOARD_ID=916130817889228735
